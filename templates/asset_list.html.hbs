<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <title>Anlagegüter {{year}}</title>
</head>
<body>
<h1>Anlagegüter {{year}}</h1>
<table>
    <thead>
    <tr>
        <td>Anlage</td>
        <td>Abschreibungsdatum</td>
        <td>Anschaffungsdatum</td>
        <td>Anschaffungskosten</td>
        <td>Buchwert Begin</td>
        <td>Abschreibung</td>
        <td>Buchwert Ende</td>
    </tr>
    </thead>
    <tfoot>
    <tr>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td>{{total_depreciation_cost}}€</td>
        <td>{{total_book_value}}€</td>
    </tr>
    </tfoot>
    <tbody>
    {{#each this.asset_information}}
        <tr>
            <td>{{this.description}}</td>
            <td>{{this.depreciationDate}}</td>
            <td>{{this.purchasingDate}}</td>
            <td>{{this.netAmount}}€</td>
            <td>{{this.bookValuePeriodBegin}}€</td>
            <td>{{this.depreciationCost}}€</td>
            <td>{{this.bookValuePeriodEnd}}€</td>
        </tr>
    {{/each}}
    <tbody>
</table>
{{#each this.available_years}}
    <a href="/assets/{{this}}">{{this}}</a>
{{/each}}

</body>
</html>
